<% content_for :header do %>
  <%= @component.name %>
<% end %>

<div class="component-show">

  <p>How to call this component</p>
<div class="code-block"contenteditable>
  <code class="language-ruby">&lt;%= render partial: 'govuk_component/<%= @component.id %>' %&gt;</code>
</div>
  <p>How this component looks</p>
  <%= render partial: "component/preview", locals: { component: @component, fixture: @component.fixture } %>

  <% if @component.fixtures? %>
  <div class="fixtures">
    <h2>Fixtures</h2>
    <ol>
    <% @component.fixtures.each do |fixture| %>
      <li class="fixture">
        <h3>
          <%= fixture.name %>
        </h3>
        <%= render partial: "component/preview", locals: { component: @component, fixture: fixture } %>
<div class="code-block" contenteditable>
  <code class="language-ruby"><%= JSON.pretty_generate(fixture.data) %></code>
</div>
      </li>
    <% end %>
    </ol>
  </div>
  <% end %>

</div>
